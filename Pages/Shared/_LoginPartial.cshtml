@using Microsoft.AspNetCore.Identity
@using ManageUsers.Areas.Identity.Data;

@inject SignInManager<WebApp1User> SignInManager
@inject UserManager<WebApp1User> UserManager

<ul class="navbar-nav">
      @if (SignInManager.IsSignedIn(User))
      {
       @if (UserManager.FindByNameAsync(User.Identity.Name) != null)
       {
            <li class="nav-item">
                <a class="nav-link text-light">Hello @User.Identity.Name!</a>
            </li>
       }
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
      }
</ul>
